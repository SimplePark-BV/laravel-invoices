{
    "name": "simplepark-bv/laravel-invoices",
    "description": "Generate professional PDF invoices for Laravel applications",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "stable",
    "keywords": [
        "laravel",
        "invoice",
        "pdf",
        "dompdf",
        "invoice-generator"
    ],
    "homepage": "https://github.com/simplepark-bv/laravel-invoices",
    "support": {
        "issues": "https://github.com/simplepark-bv/laravel-invoices/issues",
        "source": "https://github.com/simplepark-bv/laravel-invoices"
    },
    "authors": [
        {
            "name": "Lucas Castelein",
            "email": "lucas@simplepark.nl"
        },
        {
            "name": "Jasper Demmers",
            "email": "jasper@simplepark.nl"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^11.0|^12.0",
        "barryvdh/laravel-dompdf": "^3.1"
    },
    "require-dev": {
        "laravel/pint": "^1.13",
        "larastan/larastan": "^3.3",
        "orchestra/testbench": "^10.0",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "SimpleParkBv\\Invoices\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit -c ./phpunit.xml",
        "pint": "./vendor/bin/pint",
        "pint:test": "./vendor/bin/pint --test",
        "phpstan": "./vendor/bin/phpstan analyse"
    },
    "extra": {
        "laravel": {
            "providers": [
                "SimpleParkBv\\Invoices\\InvoiceServiceProvider"
            ]
        }
    }
}
